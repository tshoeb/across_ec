<%= form_for(@student) do |f| %>

  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> found</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li><br>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_field">

     <h1>New Student Account</h1>

  <div class="field">


    <%= f.label :first_name %><br />
    <%= f.text_field :first_name , :class => 'inside'%>

  </div>

<br>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name , :class => 'inside'%>
  </div>

<br>
  <div class="field">
    <%= f.label :student_number %><br />
    <%= f.text_field :student_number , :class => 'inside'%>
  </div>
<br>
  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile , :class => 'inside' , :placeholder => "55555555"%>

  </div>
<br>
  <div class="field">
    <%= f.label :university_id %><br />
    <%= collection_select(:student, :university_id, University.all, :id, :name) %>
  </div>

<br>
  <div class="field">
    <%= f.label :major %><br />
    <%= f.text_field :major , :class => 'inside'%>
  </div>
<br>
  <div class="field">
    <%= f.label :year_of_graduation %><br />
    <%= f.date_select :year_of_graduation , :class => 'inside'%>
  </div>

 <% if !@student.active %>
<br>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email , :class => 'inside' , :placeholder => "yourname@univerity.edu"%>
  </div>
  <% end %>
<br>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password , :class => 'inside'%>
  </div>
<br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation , :class => 'inside'%>

  </div>
<br>
  <div class="actions">
    <%= f.submit :value => "Create account"%>
  </div>

<% end %>
</div>
