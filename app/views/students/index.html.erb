<% @students.each do |student| %>
 <% if current_student != nil && current_student.id == student.id %>
  <tr>
    <td><%= student.proper_name %></td>
    <td><%= student.email %></td>
    <td><%= student.student_number %></td>
    <td><%= student.mobile %></td>
    <td><%= student.major %></td>
    <td><%= student.year_of_graduation %></td>

    <td><%= link_to "Show", student %></td>
    <% if can? :update, student %>
    <td><%= link_to "Edit", edit_student_path(student) %></td>
    <% end %>
    <% if can? :destroy, student %>
    <td><%= button_to "delete", student, :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
<% end %>
